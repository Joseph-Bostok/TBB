# Application Configuration
APP_NAME=TherapyBot
APP_VERSION=1.0.0
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/users.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/therapy_bot.log

# Safety Configuration
# Enable crisis detection and intervention
CRISIS_DETECTION_ENABLED=true
# Phone number or service to escalate crisis situations
CRISIS_HOTLINE=988
# Email for crisis alerts (leave empty to disable)
CRISIS_ALERT_EMAIL=

# Model Configuration
# For demo, we use rule-based responses
# In production, you would add:
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here
USE_MOCK_MODELS=true

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Rate Limiting
MAX_MESSAGES_PER_HOUR=30

# SMS Integration (Twilio)
# Get these credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567

# Your server's public URL (for Twilio webhooks)
# For local testing, use ngrok: https://ngrok.com
# Example: https://abc123.ngrok.io
WEBHOOK_BASE_URL=http://localhost:8000

# Personalization Features
# Enable learning user's communication style
ENABLE_PERSONALIZATION=true
# Number of past messages to analyze for style learning
STYLE_LEARNING_WINDOW=50
